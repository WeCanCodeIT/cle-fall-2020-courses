@model cle_fall_2020_courses.Models.Course
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h1>Course Details</h1>
    <p>Title: <span>@Model.Name</span></p>
    <p>Instructor: <a href="/Instructor/Details/@Model.Instructor.Id">@Model.Instructor.Name</a></p>
    <p>Description: <span>@Model.Description</span></p>
    <p>Created on: <span>@Model.LastRevision</span></p>
    <hr />

    <a href="/Course/Update/@Model.Id">Update Course</a>

    <a href="/Course/Delete/@Model.Id">Delete Course</a>

    <a href="/Course/Index">Return to Courses List</a>

</body>
</html>
